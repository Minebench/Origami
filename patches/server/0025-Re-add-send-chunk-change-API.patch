@@ -729,6 +729,18 @@ public class CraftPlayer extends CraftHumanEntity implements Player {
         throw new NotImplementedException("Chunk changes do not yet work"); // TODO: Chunk changes.
     }
 
+    // Origami start - implement chunk change API
+    @Override
+    public boolean sendChunkChange(org.bukkit.Chunk chunk) {
+        if (getHandle().playerConnection == null) return false;
+
+        net.minecraft.server.PacketPlayOutMapChunk packet = new net.minecraft.server.PacketPlayOutMapChunk(((org.bukkit.craftbukkit.CraftChunk) chunk).getHandle(), 65535, true);
+
+        getHandle().playerConnection.sendPacket(packet);
+        return true;
+    }
+    // Origami end
+
     @Override

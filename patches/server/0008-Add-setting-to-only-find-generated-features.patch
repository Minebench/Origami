+        public boolean onlyFindGeneratedFeatures = false;
+        private void onlyGetGeneratedFeatures() {
+            onlyFindGeneratedFeatures = getBoolean("only-find-generated-features", onlyFindGeneratedFeatures);
+        }
     }
 

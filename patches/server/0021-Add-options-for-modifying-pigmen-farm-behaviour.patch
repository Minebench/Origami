@@ -95,6 +102,16 @@ public class BlockPortal extends Block {
     @Override
     public void a(IBlockData iblockdata, World world, BlockPosition blockposition, Entity entity) {
         if (!entity.isPassenger() && !entity.isVehicle() && entity.canPortal()) {
+            // Origami start - Pig Zombie portal boost
+            if (entity instanceof EntityPigZombie && world.origamiConfig.pigmenPortalBoost > 0) {
+                Vec3D velocity = new Vec3D(entity.getLookDirection().x, 0, entity.getLookDirection().z).a(world.origamiConfig.pigmenPortalBoost);
+                if (entity.getDirection().k() != iblockdata.get(BlockPortal.AXIS)) {
+                    velocity = velocity.b(90f);
+                }
+                entity.move(EnumMoveType.SELF, velocity);
+                return;
+            }
+            // Origami end
             // CraftBukkit start - Entity in portal
             EntityPortalEnterEvent event = new EntityPortalEnterEvent(entity.getBukkitEntity(), new org.bukkit.Location(world.getWorld(), blockposition.getX(), blockposition.getY(), blockposition.getZ()));
             world.getServer().getPluginManager().callEvent(event);

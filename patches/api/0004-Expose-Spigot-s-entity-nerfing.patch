     @NotNull
     org.bukkit.event.entity.CreatureSpawnEvent.SpawnReason getEntitySpawnReason();
     // Paper end
+
+    // Origami start - Expose mob nerfing (Spigot's fromMobSpawner)
+    /**
+     * gets whether this entity is nerfed. (Spigot's Spawner nerfing)
+     * Not to be confused with {@link Entity#fromMobSpawner}!
+     *
+     * @return Whether or not the entity is nerfed (should have no AI but still have physics/jump)
+     */
+    boolean isNerfed();
+
+    /**
+     * Sets whether this entity is nerfed (should have no AI but still have physics/jump).
+     *
+     * @param nerfed Whether or not the entity should be nerfed
+     */
+    void setNerfed(boolean nerfed);
+    // Origami end
 }
